<?xml version="1.0" encoding="UTF-8"?>
<scene width="1920" height="1080" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/CasparCG/Server/2.1.0/core/producer/scene/scene.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <variables>
    <variable type="string" public="true" id="F0">Needs f0</variable>
    <variable type="string" public="true" id="f1">Needs f1</variable>
    <variable type="string" public="true" id="f2">Needs f2</variable>
    <variable type="string" public="true" id="time_format">%H:%M</variable>
    <variable type="number" public="true" id="time_offset">-525</variable>

    <!-- for animating separately -->
    <variable type="number" id="ticker_y">100</variable>
    <variable type="number" id="bar_y">126.4</variable>
    <variable type="number" id="bar_blur_y">0</variable>

  </variables>

  <layers>
    <layer id="bluebar">
      <producer>GE2018/LT/BLUE-BAR</producer>
      <x>0</x>
      <y>${variable.bar_y}</y>
      <clip>
        <lower_right_y>1000</lower_right_y>
      </clip>
      <blur_y>${variable.bar_blur_y}</blur_y>
    </layer>
    <layer id="bluetext">
      <producer>[TEXT] "" 0 0 size 70 color #ffffff font HelveticaNeue-Bold</producer>
      <x>107.7</x>
      <y>${variable.bar_y + 969}</y>
      <clip>
        <lower_right_y>1000</lower_right_y>
      </clip>
      <blur_y>${variable.bar_blur_y}</blur_y>
      <parameters>
        <text>${F0}</text>
      </parameters>
    </layer>
    <layer id="tickerbg">
      <producer>GE2018/LT/TICKER-BAR</producer>
      <x>0</x>
      <y>${variable.ticker_y}</y>
    </layer>
    <layer id="tickerclock">
      <producer>[TEXT] "" 0 0 size 25 color #000000 font HelveticaNeue-Bold</producer>
      <x>65</x>
      <y>${variable.ticker_y + 1018.5}</y>
      <parameters>
        <text>${date(time_format, time_offset)}</text>
      </parameters>
    </layer>
  </layers>

  <marks>
    <mark at="0" type="start" label="intro" />
    <mark at="35" type="stop" label="clear" />
    <mark at="100" type="start" label="outro" />
    <mark at="135" type="remove"/>
  </marks>

  <timelines>
    <timeline variable="variable.ticker_y">
      <keyframe at="0">100</keyframe>
      <keyframe at="10" easing="linear">0</keyframe>
      <keyframe at="125">0</keyframe>
      <keyframe at="135" easing="linear">100</keyframe>
    </timeline>
    <timeline variable="variable.bar_y">
      <keyframe at="25">126.4</keyframe>
      <keyframe at="35" easing="linear">0</keyframe>
      <keyframe at="100">0</keyframe>
      <keyframe at="110" easing="linear">126.4</keyframe>
    </timeline>
    <timeline variable="variable.bar_blur_y">
      <keyframe at="25">0</keyframe>
      <keyframe at="30" easing="linear">8</keyframe>
      <keyframe at="35" easing="linear">0</keyframe>
      <keyframe at="100">0</keyframe>
      <keyframe at="105" easing="linear">8</keyframe>
      <keyframe at="110" easing="linear">0</keyframe>
    </timeline>
  </timelines>
</scene>
