<?xml version="1.0" encoding="UTF-8"?>
<scene width="1920" height="1080" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/CasparCG/Server/2.1.0/core/producer/scene/scene.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <variables>
    <variable type="string" public="true" id="f0">GUILD ELECTIONS 2018</variable>
    <variable type="string" public="true" id="f1"></variable>

    <!-- for animating separately -->
    <variable type="number" public="true" id="bar_y">0</variable>
    <variable type="number" public="true" id="bar_blur_y">0</variable>

  </variables>

  <layers>
    <layer id="bluebar">
      <producer>GE2018/LT/GREY-BAR</producer>
      <x>0</x>
      <y>${bar_y}</y>
      <clip>
        <lower_right_y>1000</lower_right_y>
      </clip>
      <blur_y>${bar_blur_y}</blur_y>
    </layer>
    <layer id="line1">
      <producer>[TEXT] "" 0 0 size 45 color #ffffff font HelveticaNeue-Bold</producer>
      <x>112</x>
      <y>${bar_y + 945}</y>
      <clip>
        <lower_right_y>1000</lower_right_y>
      </clip>
      <blur_y>${bar_blur_y}</blur_y>
      <parameters>
        <text>${f0}</text>
      </parameters>
    </layer>
    <layer id="line2">
      <producer>[TEXT] "" 0 0 size 30 color #ffffff font HelveticaNeue</producer>
      <x>112</x>
      <y>${bar_y + 982}</y>
      <clip>
        <lower_right_y>1000</lower_right_y>
      </clip>
      <blur_y>${bar_blur_y}</blur_y>
      <parameters>
        <text>${f1}</text>
      </parameters>
    </layer>
  </layers>

</scene>
